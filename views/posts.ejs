<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Blog</title>
</head>
<body>
  <nav class="navbar navbar-dark" style="background-color: #334569;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/posts">Home</a>
      <form action ="./logout" method="get">
        <input type="submit" name="logout" value="logout" />
      </form>
    </div>
  </nav>

  <div class="container">
    <h1 class="mb-4">Blog Articles</h1>
    <a href="/create" class="btn btn-success">New Article</a>

    <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-text mb-2"><pre><%= article.content %></pre></div>

          <form action="./delete/<%= article.id %>" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>

        </div>
      </div>
    <% }) %>
  </div>
  <!-- JS Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="../public/javascripts/create.js"></script>
</body>
</html>